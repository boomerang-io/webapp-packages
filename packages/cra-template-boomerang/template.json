{
  "package": {
    "homepage": "https://launch.boomerangplatform.net/BMRG_APP_ROOT_CONTEXT",
    "scripts": {
      "analyze": "source-map-explorer server/build/static/js/main.*",
      "build": "react-scripts build",
      "postbuild": "copyfiles build/**/*.* server",
      "cm": "git cz",
      "cypress": "cypress open",
      "cypress:run": "$(npm bin)/cypress run --config video=false",
      "docker": "run-p docker:run",
      "docker:build": "docker build -t webapp .",
      "docker:run": "docker run -i -t -p 3000: 3000 -e APP_ROOT=/app -e BASE_SERVICE_ENV_URL=http://localhost:8000 webapp",
      "eject": "react-scripts eject",
      "lint": "eslint src",
      "predocker": "run-s build docker:build",
      "preprod": "run-s build prod:installServerDependencies prod:rewriteAssetPaths",
      "prod": "run-p prod:server",
      "prod:installServerDependencies": "npm --prefix ./server install ./server",
      "prod:rewriteAssetPaths": "cross-env APP_ROOT=/app node server/scripts/rewriteAssetPaths.js",
      "prod:server": "cd server && npm run-script dev",
      "start": "react-scripts start",
      "test": "react-scripts test --env=jsdom-fourteen",
      "test:ci": "react-scripts test --coverage --env=jsdom-fourteen",
      "test:ci-cypress": "start-server-and-test dev http://localhost:3000 cypress:run",
      "test:coverage": "react-scripts test --coverage --env=jsdom-fourteen",
      "test:staged": "cross-env CI=true react-scripts test --passWithNoTests --findRelatedTests --bail --env=jsdom-fourteen",
      "test:static": "eslint -f json -o lint-report.json ./src",
      "upgradePackage": "node scripts/upgradePackage"
    },
    "dependencies": {
      "@boomerang-io/carbon-addons-boomerang-react": "0.0.11",
      "@boomerang-io/styles": "^0.0.2",
      "axios": "0.19.2",
      "classnames": "2.2.6",
      "carbon-components": "10.12.0",
      "carbon-components-react": "7.12.0",
      "eslint-plugin-cypress": "^2.11.1",
      "eslint-plugin-jest": "^23.11.0",
      "eslint-plugin-jest-dom": "3.0.1",
      "eslint-plugin-testing-library": "3.3.0",
      "formik": "^2.1.2",
      "miragejs": "^0.1.40",
      "moment-timezone": "^0.5.31",
      "node-sass": "4.14.1",
      "npm-run-all": "4.1.5",
      "prop-types": "15.7.2",
      "react": "16.13.1",
      "react-dom": "16.13.1",
      "react-helmet": "^5.2.1",
      "react-router-dom": "5.2.0",
      "react-query": "2.5.2",
      "react-query-devtools": "^1.1.0",
      "yup": "^0.28.0",
      "@testing-library/cypress": "^6.0.0",
      "@testing-library/jest-dom": "^5.10.1",
      "@testing-library/react": "^10.2.1",
      "@testing-library/react-hooks": "^3.3.0",
      "@testing-library/user-event": "^12.0.2",
      "find-webpack": "^2.0.0",
      "@cypress/webpack-preprocessor": "^5.4.1"
    },
    "devDependencies": {
      "@commitlint/cli": "8.1.0",
      "@commitlint/config-conventional": "8.1.0",
      "@cypress/webpack-preprocessor": "^5.4.1",
      "@testing-library/cypress": "^6.0.0",
      "@testing-library/jest-dom": "^5.10.1",
      "@testing-library/react": "^10.2.1",
      "@testing-library/react-hooks": "^3.3.0",
      "@testing-library/user-event": "^12.0.2",
      "commitizen": "4.0.3",
      "copyfiles": "2.3.0",
      "cross-env": "7.0.2",
      "cypress": "^4.3.0",
      "cz-conventional-changelog": "3.1.0",
      "eslint-plugin-cypress": "^2.11.1",
      "eslint-plugin-jest": "^23.11.0",
      "eslint-plugin-jest-dom": "3.0.1",
      "eslint-plugin-testing-library": "3.3.0",
      "find-webpack": "^2.0.0",
      "http-proxy-middleware": "^1.0.4",
      "jest-axe": "^3.4.0",
      "lint-staged": "10.1.1",
      "miragejs": "0.1.40",
      "prettier": "2.0.5",
      "replace-in-file": "^3.4.3",
      "source-map-explorer": "2.4.2",
      "start-server-and-test": "^1.10.11"
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged",
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
      }
    },
    "config": {
      "commitizen": {
        "path": "cz-conventional-changelog"
      }
    },
    "jest": {
      "collectCoverageFrom": [
        "!**/*.spec.{js,jsx}",
        "!**/Assets/**",
        "!**/ApiServer/**",
        "**/src/Components/**/*.{js,jsx}",
        "**/src/Features/**/*.{js,jsx}",
        "**/src/Hooks/**/*.{js,jsx}",
        "**/src/State/**/*.{js,jsx}",
        "**/src/Utils/**/*.{js,jsx}"
      ]
    },
    "commitlint": {
      "extends": ["@commitlint/config-conventional"]
    },
    "lint-staged": {
      "*.{js,jsx,json,scss,css,md}": ["prettier --print-width 120 --write"],
      "src/**/*.{js,jsx}": ["npm run-script lint", "npm run-script test:staged"]
    },
    "browserslist": {
      "production": [
        ">0.2%",
        "not dead",
        "not op_mini all"
      ],
      "development": [
        "last 1 chrome version",
        "last 1 firefox version",
        "last 1 safari version"
      ]
    }
  }
}
