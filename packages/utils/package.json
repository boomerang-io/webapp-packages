{
  "name": "@boomerang-io/utils",
  "version": "0.0.6",
  "author": {
    "name": "Tim Bula",
    "email": "timrbula@gmail.com"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:boomerang-io/webapp-packages",
    "directory": "packages/utils"
  },
  "homepage": "https://github.com/boomerang-io/webapp-packages",
  "bugs": {
    "url": "https://github.com/boomerang-io/webapp-packages/issues"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run build:commonjs",
    "build:commonjs": "cross-env NODE_ENV=production babel ./src --out-dir ./lib --ignore ./**/*.test.js",
    "lint": "eslint src",
    "precommit": "lint-staged",
    "prebuild": "rimraf lib es",
    "prepare": "npm run-script build",
    "test": "jest --watch",
    "test:ci": "jest --findRelatedTests"
  },
  "peerDependencies": {
    "axios": "^0.21.1",
    "lodash": "^4.17.19",
    "query-string": "^6.8.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-query": "^2.4.14",
    "react-router-dom": "^5.1.2",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.7.1",
    "cross-env": "7.0.2",
    "chalk": "2.3.0",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "^22.21.0",
    "extract-text-webpack-plugin": "3.0.2",
    "fs-extra": "5.0.0",
    "html-webpack-plugin": "2.30.1",
    "jest": "26.4.2",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.19",
    "promise": "8.0.1",
    "query-string": "6.8.3",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-query": "^2.4.14",
    "react-router-dom": "^5.1.2",
    "rimraf": "2.6.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.10.1",
    "webpack-manifest-plugin": "1.3.2",
    "yup": "^0.28.3"
  },
  "keywords": [
    "boomerang",
    "react",
    "utilities"
  ],
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md}": [
      "prettier --print-width 120 --write"
    ],
    "src/**/*.{js,jsx}": [
      "npm run-script lint",
      "npm run-script test:ci"
    ],
    "*": [
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "sideEffects": false
}
