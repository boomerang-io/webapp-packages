{
  "name": "boomerang.carbon.utilities",
  "version": "0.0.0",
  "repository": "git@github.ibm.com:Boomerang-Lib/boomerang.carbon.utilities.git",
  "author": "Timothy Bula <timrbula@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "changed": "lerna changed",
    "release": "lerna publish",
    "lint": "eslint packages",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "lerna-changelog": "^1.0.1",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "yargs": "^15.3.1"
  },
  "publishConfig": {
    "registry": "https://tools.boomerangplatform.net/artifactory/api/npm/boomeranglib-npm/"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint packages --fix",
    "*.{js,json,css,md}": [
      "prettier --print-width 120 --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{js}",
      "!**/node_modules/**"
    ],
    "roots": [
      "packages/"
    ]
  },
  "eslintConfig": {
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "no-process-exit": "off"
    }
  }
}
